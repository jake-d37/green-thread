{
  "manifest_version": 3,
  "name": "Embedded Popup Extension",
  "version": "1.0.0",
  "description": "An extension with an embedded popup.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "notifications",
    "webNavigation",
    "tabs"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "popup/notify.html",
        "popup/popupStyles.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "images/icons/icon-16.png",
    "32": "images/icons/icon-32.png",
    "128": "images/icons/icon-128.png"
  }
}